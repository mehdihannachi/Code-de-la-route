<!-- src/Acme/UserBundle/Resources/config/services.xml -->
<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
        
        <service id="cdlr_user.registration.form.type" class="Cdlr\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="cdlr_user_registration" />
        </service>
        <service id="cdlr_admin_user.registration.form.type" class="Cdlr\UserBundle\Form\Type\AdminCreationFormType">
            <tag name="form.type.admin" alias="cdlr_admin_registration" />
        </service>
        <service id="cdlr_gerant_user.registration.form.type" class="Cdlr\UserBundle\Form\Type\GerantMoniteurCreationFormType">
            <tag name="form.type.gerant" alias="cdlr_gerant_user_registration" />
        </service>

    </services>

</container>